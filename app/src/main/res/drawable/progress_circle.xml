<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270"
            android:repeatCount="infinite"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape
                android:shape="ring"
                android:top="1dip">
                <stroke
                    android:width="1dip"
                    android:color="#46a9eb"/>
                <gradient
                    android:endColor="#46a9eb"
                    android:startColor="#46a9eb"
                    android:type="sweep"/>
            </shape>
        </rotate>

    </item>

</layer-list>