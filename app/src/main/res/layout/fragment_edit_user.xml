<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:layout_margin="@dimen/spacing_medium"
                  android:layout_height="44dp">
        <TextView android:layout_width="wrap_content"
                  android:text="Name"
                  android:layout_height="wrap_content"/>
        <View style="@style/horizontal_spacer"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/bluetooth_device_charge"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <View style="@style/horizontal_border"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:layout_margin="@dimen/spacing_medium"
                  android:layout_height="44dp">
        <TextView android:layout_width="wrap_content"
                  android:text="Phone Number"
                  android:layout_height="wrap_content"/>
        <View style="@style/horizontal_spacer"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/bluetooth_device_level"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <View style="@style/horizontal_border"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:layout_margin="@dimen/spacing_medium"
                  android:layout_height="44dp">
        <TextView android:layout_width="wrap_content"
                  android:text="Bi"
                  android:layout_height="wrap_content"/>
        <View style="@style/horizontal_spacer"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/bluetooth_device_message"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:visibility="gone"
                  android:id="@+id/bluetooth_device_debug"
                  android:layout_height="wrap_content">
        <EditText android:id="@+id/bluetooth_device_text"
                  android:layout_width="match_parent"
                  android:maxLines="1"
                  android:layout_height="40dp"/>
        <Button android:layout_width="wrap_content"
                android:id="@+id/bluetooth_device_send"
                android:text="Send"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>