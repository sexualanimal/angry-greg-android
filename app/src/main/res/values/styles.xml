<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="searchViewStyle">@style/AppSearchViewStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/Black</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:navigationBarColor">@android:color/holo_blue_light</item>
        <item name="android:windowBackground">@color/xxlight_grey</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>

        <!-- Fix for pre Lolipop versions to use colors as drawables -->
        <item name="colorPrimaryDrawable">@drawable/color_primary</item>
        <item name="colorPrimaryDarkDrawable">@drawable/color_primary_dark</item>
        <item name="colorAccentDrawable">@drawable/color_accent</item>
    </style>

    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@drawable/ic_action_search</item>
        <item name="closeIcon">@drawable/ic_action_close</item>
        <item name="queryHint">@string/search</item>
        <item name="android:imeActionId">6</item>
    </style>

    <style name="vertical_border">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">0px</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="horizontal_border">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="default_multiline_edit_text">
        <item name="android:inputMethod">textMultiLine</item>
        <item name="android:gravity">top|left</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/rounded_default_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_huge</item>
    </style>

    <style name="price_text_style">
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:textSize">@dimen/text_super_nano</item>
        <item name="android:textColor">@color/red_light</item>
        <item name="android:paddingLeft">@dimen/text_large</item>
    </style>
    <style name="order_label">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_marginBottom">@dimen/spacing_nano</item>
    </style>
    <style name="edit_text">
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:background">@drawable/edit_text</item>
    </style>
    <style name="simple_multiline_edit_text">
        <item name="android:gravity">top|left</item>
        <item name="android:minLines">1</item>
        <item name="android:lines">5</item>
        <item name="android:maxLines">10</item>
        <item name="android:scrollbars">none</item>
    </style>
    <style name="choose_label">
        <item name="android:textColor">@color/Black</item>
        <item name="android:background">@color/xlight_grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
    </style>
    <style name="order_new_adders_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="vertical_spacer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <style name="horizontal_spacer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="card_view_base_textview">
        <item name="android:textSize">@dimen/card_view_input_text_size</item>
    </style>

    <style name="card_view_field" parent="card_view_base_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_large</item>
        <item name="android:layout_marginRight">@dimen/spacing_large</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:paddingTop">@dimen/spacing_large</item>
        <item name="android:paddingBottom">@dimen/spacing_large</item>
        <item name="android:paddingLeft">@dimen/spacing_large</item>
        <item name="android:paddingRight">@dimen/spacing_xlarge</item>
        <item name="android:textColorHint">@color/card_view_light_gray</item>
        <item name="android:textCursorDrawable" tools:ignore="NewApi">@null</item>
        <item name="android:background">@drawable/credit_card_field</item>
    </style>

    <style name="card_view_field_landscape" parent="card_view_field">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="text_switch">
        <item name="android:colorForeground">@color/gray</item>
        <item name="colorControlActivated">@color/gray</item>
    </style>
</resources>
